<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bodapps.spinwithbuddies"
    android:versionCode="3"
    android:versionName="2.0" >

    
    
    
    
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="17" />

    
    
    
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        
        
        
        
        <!-- ANDROID STARTER ACTIVITY -->
        <activity
            android:name="com.bodapps.spinwithbuddies.Android_Starter"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        
        
        
        
        <!-- ADMOB MANIFEST SETTINGS -->
        <meta-data android:name="ADMOB_PUBLISHER_ID" android:value="YOUR_ID_HERE"/>
        
        <activity 
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        
        
        
        
        
    </application>
    
    
    
    
    
    <!--  USER PERMISSION SETUP  -->
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    
    
    
    
</manifest>